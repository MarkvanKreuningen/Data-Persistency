<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.Adres" table="ADRES">
        <id name="adres_id" type="int" access="field">
            <column name="ADRES_ID" />
            <generator class="assigned" />
        </id>

        <property name="postcode" type="java.lang.String" access="field">
            <column name="POSTCODE" />
        </property>

        <property name="huisnummer" type="java.lang.String" access="field">
            <column name="HUISNUMMER" />
        </property>

        <property name="straat" type="java.lang.String" access="field">
            <column name="STRAAT" />
        </property>

        <property name="woonplaats" type="java.util.Date" access="field">
            <column name="WOONPLAATS" />
        </property>

        <property name="reiziger_id" type="java.util.Date" access="field">
            <column name="REIZIGER_ID" />
        </property>

    </class>
</hibernate-mapping>
