<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.Product" table="PRODUCT">
        <id name="productNumber" type="int" access="field">
            <column name="product_nummer" />
            <generator class="assigned" />
        </id>

        <property name="naam" type="java.lang.String" access="field">
            <column name="naam" />
        </property>

        <property name="beschrijving" type="java.lang.String" access="field">
            <column name="beschrijving" />
        </property>

        <property name="prijs" type="java.lang.Double" access="field">
            <column name="prijs" />
        </property>

    </class>
</hibernate-mapping>
