<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.OVChipkaart" table="PRODUCT">
        <id name="kaartNummer" type="int" access="field">
            <column name="kaart_nummer" />
            <generator class="assigned" />
        </id>

        <property name="geldigTot" type="java.time.LocalDate" access="field">
            <column name="geldig_tot" />
        </property>

        <property name="klasse" type="int" access="field">
            <column name="klasse" />
        </property>

        <property name="saldo" type="java.lang.Double" access="field">
            <column name="saldo" />
        </property>

    </class>
</hibernate-mapping>
